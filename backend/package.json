{
  "name": "neurobreak-backend",
  "version": "1.0.0",
  "description": "Backend de NeuroBreak - API REST con Node.js + Express + PostgreSQL",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "db:setup": "node src/infrastructure/database/setupHelper.js",
    "db:migrate": "node src/infrastructure/database/sqlMigrationRunner.js",
    "migrate": "npm run db:migrate",
    "migrate:legacy": "node src/infrastructure/database/migrate.js",
    "seed": "node src/infrastructure/database/seed.js",
    "db:reset": "npm run db:setup && npm run db:migrate && npm run seed",
    "db:init": "npm run db:setup && npm run db:migrate"
  },
  "keywords": [
    "neurobreak",
    "microactivities",
    "wellness",
    "students"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-google-oauth20": "^2.0.0",
    "passport-microsoft": "^1.1.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
