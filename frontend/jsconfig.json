{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "hooks/*": ["hooks/*"],
      "contexts/*": ["contexts/*"],
      "services/*": ["services/*"],
      "utils/*": ["utils/*"],
      "config/*": ["config/*"],
      "assets/*": ["assets/*"],
      "styles/*": ["styles/*"],
      "core/*": ["core/*"],
      "infrastructure/*": ["infrastructure/*"],
      "patterns/*": ["patterns/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
